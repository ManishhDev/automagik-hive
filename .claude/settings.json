{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "${WORKSPACE}/.claude/hooks/task-context-injector.sh",
            "description": "Automatically adds project context to sub-agent prompts"
          }
        ]
      },
      {
        "matcher": "mcp__.*",
        "hooks": [
          {
            "type": "command",
            "command": "${WORKSPACE}/.claude/hooks/mcp-security-scan.sh",
            "description": "Scans for sensitive data before sending to external services"
          }
        ]
      }
    ]
  },
  "environment": {
    "WORKSPACE": "/home/namastex/workspace/pagbank-multiagents"
  }
}