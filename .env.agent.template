# Automagik Hive Agent Environment Configuration
# Copy this file to .env.agent and customize as needed
#
# Agent Stack Configuration (Development Agent Services)
# Ports: 35532 (postgres), 38886 (api)

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://hive_agent:hive_agent_password@localhost:35532/hive_agent
POSTGRES_HOST=localhost
POSTGRES_PORT=35532
POSTGRES_DB=hive_agent
POSTGRES_USER=hive_agent
POSTGRES_PASSWORD=hive_agent_password

# =============================================================================
# API CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=info

# =============================================================================
# AGENT-SPECIFIC CONFIGURATION
# =============================================================================
HIVE_MODE=agent
HIVE_API_KEY=agent-dev-key-12345

# Service identification
SERVICE_NAME=hive-agent-api
SERVICE_PORT=8000

# Resource configuration
MAX_WORKERS=4
WORKER_TIMEOUT=30

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=true
RELOAD=true
ACCESS_LOG=true

# =============================================================================
# SECURITY CONFIGURATION  
# =============================================================================
SECRET_KEY=agent-secret-key-development-only-change-in-production
JWT_SECRET_KEY=agent-jwt-secret-development-only
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://localhost:38886"]

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Add your API keys and external service configurations here
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# GOOGLE_API_KEY=

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_FORMAT=json
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=7

# Health check configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_PROFILING=false