# =========================================================================
# AUTOMAGIK HIVE - Environment Configuration
# =========================================================================
# Application Environment (default: "development")
HIVE_ENVIRONMENT=development
# Disable authentication system (default: "false" - DEVELOPMENT ONLY, never use in production)
# HIVE_AUTH_DISABLED=false

# Logging Configuration (default: "INFO" - options: DEBUG, INFO, WARNING, ERROR)
HIVE_LOG_LEVEL=INFO

# Optional: Log directory for file output (default: no file logging)
# HIVE_LOG_DIR=./logs

# Agno framework logging level (default: "WARNING" - options: ERROR, WARNING, INFO, DEBUG)
AGNO_LOG_LEVEL=INFO

# Default AI Model (system fallback: "gpt-4.1-mini")
# Controls which model to use when no specific model is configured
HIVE_DEFAULT_MODEL=gpt-4.1-mini

# =========================================================================
# ü§ñ AI PROVIDERS - Additional AI Model Configurations
# =========================================================================
#ANTHROPIC_API_KEY=your-anthropic-api-key-here
#GEMINI_API_KEY=your-gemini-api-key-here
#OPENAI_API_KEY=your-openai-api-key-here
# GROQ_API_KEY=your-groq-api-key-here# GROQ_API_KEY=your-groq-api-key-here

# Database Configuration - Generated dynamically by make install
HIVE_DATABASE_URL=postgresql+psycopg://hive_user:your-secure-password-here@localhost:5532/hive

# Server binding (default: "0.0.0.0" - use 127.0.0.1 for localhost only)
HIVE_API_HOST=0.0.0.0

# Worker processes for production (default: "4" - 1 per CPU core recommended) ##make default = 1
HIVE_API_WORKERS=1

# Server Configuration (default: "8886")
HIVE_API_PORT=8886

# WhatsApp Notifications (default: "false") - Uses Evolution MCP integration
HIVE_WHATSAPP_NOTIFICATIONS_ENABLED=false
# WhatsApp notification group for system alerts (optional - only if notifications enabled)
# WHATSAPP_NOTIFICATION_GROUP=your-whatsapp-group-id@g.us

# Disable Agno platform telemetry (default: "false" - recommended for privacy)
HIVE_AGNO_MONITOR=false

# =========================================================================
# ‚ö° PERFORMANCE & LIMITS - System Performance Tuning
# =========================================================================
# Optimize performance and set resource limits

# Knowledge Base Search Configuration (default: "10")
# HIVE_MAX_KNOWLEDGE_RESULTS=10

# Memory System Configuration (defaults: "30" days, "1000" entries)
# HIVE_MEMORY_RETENTION_DAYS=30
# HIVE_MAX_MEMORY_ENTRIES=1000

# Caching Configuration (defaults: "300" seconds TTL, "1000" max size)
# HIVE_CACHE_TTL=300
# HIVE_CACHE_MAX_SIZE=1000

# Rate Limiting (defaults: "100" requests per "60" second period)
# HIVE_RATE_LIMIT_REQUESTS=100
# HIVE_RATE_LIMIT_PERIOD=60

# Request and Session Limits (defaults: "10485760" bytes, "20" turns, "1800" sec timeout, "100" users)
# HIVE_MAX_REQUEST_SIZE=10485760
# HIVE_MAX_CONVERSATION_TURNS=20
# HIVE_SESSION_TIMEOUT=1800
# HIVE_MAX_CONCURRENT_USERS=100

# Team Routing Configuration (defaults: "30" seconds timeout, "3" max switches)
# HIVE_TEAM_ROUTING_TIMEOUT=30
# HIVE_MAX_TEAM_SWITCHES=3

# =========================================================================
# üìä METRICS & MONITORING - Observability Configuration
# =========================================================================
# Configure system monitoring and metrics collection

# Enable/disable metrics collection (default: "true")
# HIVE_ENABLE_METRICS=true



# Detailed Metrics Collection (all default: "true")
# HIVE_METRICS_COLLECT_TOKENS=true       # Token usage tracking from Agno
# HIVE_METRICS_COLLECT_TIME=true         # Execution timing + time_to_first_token
# HIVE_METRICS_COLLECT_TOOLS=true        # Tool execution tracking
# HIVE_METRICS_COLLECT_EVENTS=true       # Event lifecycle tracking
# HIVE_METRICS_COLLECT_CONTENT=true      # Content & media tracking




# =========================================================================
# üîê AUTHENTICATION & SECURITY - Security Settings
# =========================================================================
# Configure authentication and security features

# CORS Configuration for production (comma-separated list)
# Development automatically uses "*" for convenience
# Default includes localhost and local network access
HIVE_CORS_ORIGINS=http://localhost:3000,http://localhost:8886
HIVE_API_KEY=your-hive-api-key-here
