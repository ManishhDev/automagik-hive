# Automagik Hive Genie Environment Configuration
# Copy this file to .env.genie and customize as needed
#
# Genie Stack Configuration (Strategic Orchestration Services)
# Ports: 48532 (postgres), 48886 (api)

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
DATABASE_URL=postgresql://hive_genie:hive_genie_password@localhost:48532/hive_genie
POSTGRES_HOST=localhost
POSTGRES_PORT=48532
POSTGRES_DB=hive_genie
POSTGRES_USER=hive_genie
POSTGRES_PASSWORD=hive_genie_password

# =============================================================================
# API CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=info

# =============================================================================
# GENIE-SPECIFIC CONFIGURATION
# =============================================================================
HIVE_MODE=genie
HIVE_API_KEY=genie-orchestration-key-67890

# Service identification
SERVICE_NAME=hive-genie-api
SERVICE_PORT=8000

# Resource configuration (higher for orchestration)
MAX_WORKERS=8
WORKER_TIMEOUT=60

# =============================================================================
# ORCHESTRATION CONFIGURATION
# =============================================================================
# Genie-specific settings for multi-agent coordination
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT=300
ORCHESTRATION_TIMEOUT=600

# Agent spawning limits
MAX_TASK_DEPTH=5
MAX_PARALLEL_TASKS=8

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=true
RELOAD=true
ACCESS_LOG=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=genie-secret-key-development-only-change-in-production
JWT_SECRET_KEY=genie-jwt-secret-development-only
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://localhost:48886"]

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Add your API keys and external service configurations here
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# GOOGLE_API_KEY=
# XAI_API_KEY=

# Model provider configuration for Zen tools
GOOGLE_API_KEY=
XAI_API_KEY=

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_FORMAT=json
LOG_ROTATION_SIZE=25MB
LOG_RETENTION_DAYS=14

# Health check configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=true

# Advanced orchestration features
ENABLE_AGENT_SPAWNING=true
ENABLE_PARALLEL_EXECUTION=true
ENABLE_CONTEXT_PRESERVATION=true

# =============================================================================
# AGENT COMMUNICATION
# =============================================================================
# Agent service endpoints for cross-stack communication
AGENT_API_URL=http://localhost:38886
AGENT_API_KEY=agent-dev-key-12345

# Inter-service communication
ENABLE_CROSS_STACK_COMMUNICATION=true
SERVICE_DISCOVERY_ENABLED=true