# Production Environment Configuration
# Security-hardened settings for production deployment

# Application Configuration
RUNTIME_ENV=prd
DEBUG_MODE=false
LOG_LEVEL=info
API_WORKERS=4

# Security Configuration
SECRET_KEY=your-production-secret-key-here
API_KEY_REQUIRED=true
CORS_ORIGINS=https://your-production-domain.com
ALLOWED_HOSTS=your-production-domain.com

# Database Configuration
DATABASE_URL=postgresql://postgres:your-secure-password@postgres:5432/pagbank_agents
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=pagbank_agents
POSTGRES_USER=postgres
POSTGRES_PORT=5432
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring Configuration
PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=your-grafana-password

# Resource Limits
MAX_REQUEST_SIZE=50MB
REQUEST_TIMEOUT=120s
WORKER_TIMEOUT=300s

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
ACCESS_LOG=/app/logs/access.log
ERROR_LOG=/app/logs/error.log

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true

# External Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key

# WhatsApp Integration (if applicable)
WHATSAPP_INSTANCE=your-whatsapp-instance
WHATSAPP_RECIPIENT=your-whatsapp-number

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *