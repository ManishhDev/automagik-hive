# Staging Environment Configuration
# Production-like settings for staging deployment

# Application Configuration
RUNTIME_ENV=staging
DEBUG_MODE=false
LOG_LEVEL=debug
API_WORKERS=2

# Security Configuration
SECRET_KEY=staging-secret-key-change-me
API_KEY_REQUIRED=true
CORS_ORIGINS=https://staging.your-domain.com,http://localhost:3000
ALLOWED_HOSTS=staging.your-domain.com,localhost

# Database Configuration
DATABASE_URL=postgresql://postgres:staging-password@postgres:5432/pagbank_agents_staging
POSTGRES_PASSWORD=staging-password
POSTGRES_DB=pagbank_agents_staging
POSTGRES_USER=postgres
POSTGRES_PORT=5432
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=15

# Redis Configuration
REDIS_URL=redis://redis:6379/1
REDIS_PASSWORD=staging-redis-password
REDIS_PORT=6379

# SSL/TLS Configuration (self-signed for staging)
SSL_CERT_PATH=/etc/nginx/ssl/staging-cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/staging-key.pem

# Monitoring Configuration
PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=staging-grafana

# Resource Limits
MAX_REQUEST_SIZE=50MB
REQUEST_TIMEOUT=120s
WORKER_TIMEOUT=300s

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
ACCESS_LOG=/app/logs/access.log
ERROR_LOG=/app/logs/error.log

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=1800
ENABLE_COMPRESSION=true

# External Services (use test/sandbox keys)
OPENAI_API_KEY=test-openai-api-key
ANTHROPIC_API_KEY=test-anthropic-api-key
COHERE_API_KEY=test-cohere-api-key

# WhatsApp Integration (test instance)
WHATSAPP_INSTANCE=test-instance
WHATSAPP_RECIPIENT=test-number

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 4 * * *