    "sqlite": {
      "command": "npx",
      "args": [
          "-y",
          "mcp-sqlite",
          "data/automagik.db"
      ]
    },
    "agent-brain": {
      "type": "sse",
      "url": "http://192.168.112.152:8765/mcp/openmemory/sse/genie-ui"
    },
    "ask-repo-agent": {
      "type": "sse",
      "url": "https://mcp.deepwiki.com/sse"
    },
    "search-repo-docs": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "user-browser": {
      "command": "npx",
      "args": ["@agentdeskai/browser-tools-mcp@1.2.0"],
      "enabled": true
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "wait": {
      "command": "uvx",
