# Automagik Store Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Database Configuration (Required)
DATABASE_URL=postgresql://hive_user:hive_password@localhost:35532/hive_agent

# API Configuration
HIVE_API_KEY=your_hive_api_key_here
HIVE_API_URL=http://localhost:38886

# Environment
ENVIRONMENT=development
DEBUG=false

# =============================================================================
# LLM PROVIDERS (At least one required)
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-...your_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-...your_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini
GOOGLE_API_KEY=your_gemini_key_here
GEMINI_MODEL=gemini-2.5-pro

# X.AI Grok
XAI_API_KEY=your_grok_key_here
GROK_MODEL=grok-4-latest

# =============================================================================
# TOOL CONFIGURATIONS
# =============================================================================

# Web Search Tool
SEARCH_API_KEY=your_search_api_key
SEARCH_ENGINE_ID=your_search_engine_id
SEARCH_MAX_RESULTS=10

# Database Tool
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=30

# =============================================================================
# TRAVEL PLANNING APIS (For SkyPlanner Team)
# =============================================================================

# Google Maps API (Required for Maps Agent)
# Get from: https://console.cloud.google.com/projectselector2/google/maps-apis/credentials
# Enable: Address Validation API at https://console.developers.google.com/apis/api/addressvalidation.googleapis.com
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Apify API (Required for Airbnb Agent)
# Get from: https://console.apify.com/settings/integrations
APIFY_TOKEN=your_apify_token

# =============================================================================
# MCP SERVER CONFIGURATIONS
# =============================================================================

# PostgreSQL MCP Server
MCP_POSTGRES_ENABLED=true
MCP_POSTGRES_CONNECTION=${DATABASE_URL}

# Web Search MCP Server
MCP_WEBSEARCH_ENABLED=true
MCP_WEBSEARCH_API_KEY=${SEARCH_API_KEY}

# Automagik Forge MCP Server
MCP_FORGE_ENABLED=true
MCP_FORGE_API_KEY=${HIVE_API_KEY}
MCP_FORGE_URL=http://localhost:38886

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Monitoring (Optional)
TELEMETRY_ENABLED=false
TELEMETRY_ENDPOINT=http://localhost:4318

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# SECURITY & LIMITS
# =============================================================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Timeouts (in seconds)
AGENT_TIMEOUT=300
TEAM_TIMEOUT=600
WORKFLOW_TIMEOUT=1800
TOOL_TIMEOUT=60

# Memory Limits
MAX_AGENT_MEMORY_MB=512
MAX_WORKFLOW_MEMORY_MB=2048

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Hot Reload
HOT_RELOAD_ENABLED=true
WATCH_DIRECTORIES=ai/agents,ai/teams,ai/workflows,ai/tools

# Testing
TEST_MODE=false
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:35533/test_db

# Debugging
VERBOSE_LOGGING=false
TRACE_ENABLED=false