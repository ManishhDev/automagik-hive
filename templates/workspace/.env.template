# {{workspace_name}} Workspace Configuration
WORKSPACE_NAME={{workspace_name}}
ENVIRONMENT=development

# Database Configuration
DATABASE_URL={{database_url}}
AGENT_DATABASE_URL={{agent_database_url}}
GENIE_DATABASE_URL={{genie_database_url}}

# API Configuration
API_HOST={{api_host}}
API_PORT={{api_port}}
AGENT_API_URL={{agent_api_url}}
GENIE_API_URL={{genie_api_url}}

# MCP Configuration
MCP_ENABLED={{mcp_enabled}}

# Logging Configuration
LOG_LEVEL={{log_level}}

# Security
{{#if has_api_key}}
API_KEY={{api_key}}
{{/if}}

# Feature Flags
{{#if enable_additional_mcps}}
ENABLE_ADDITIONAL_MCPS=true
{{/if}}
{{#if enable_filesystem_mcp}}
ENABLE_FILESYSTEM_MCP=true
{{/if}}
{{#if enable_git_mcp}}
ENABLE_GIT_MCP=true
{{/if}}

{{#if has_docker}}
# Docker Configuration
DOCKER_AVAILABLE=true
{{/if}}

{{#if has_uv}}
# UV Package Manager
UV_AVAILABLE=true
{{/if}}